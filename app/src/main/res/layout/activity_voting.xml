
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Voting">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome for voting"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="35dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click here to view the candidates"
        android:textAlignment="textStart"
        android:layout_marginTop="50dp"
        android:textColor="#000"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/bn_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Candidates"
        android:layout_gravity="left"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/vote_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Email"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="50dp"
        />

    <EditText
        android:id="@+id/id_vote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the id to be voted"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="50dp"
        />

    <Button
        android:id="@+id/vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here for vote"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>




</LinearLayout>